<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image File Upload</title>
   
    <link href="https://cdn.lineicons.com/2.0/LineIcons.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <link rel ="stylesheet" href="/css/style.css">

</head>
<body>
    
    <div class="container">
        <h1>File Upload</h1>
        <div class="error"><%= typeof msg != 'undefined' ? msg : '' %></div>
        <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="file-field input-field inner-container">
              <div class="btn btn-grey" onclick="resetMessage()">
                <span>Add Image File</span>
                <input name="myImage" type="file" id="fileUpload">
              </div>
              <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
              </div>
            
            
            <button class="btn btn-primary uploadBtn" type="submit" name="action">Upload
                <i class="lni lni-angle-double-up lni-lg"></i>
            </button>
             
        </div>
          </form>

          <br><br>
          <img src="<%= typeof file !='undefined' ? file: '' %>" alt= "<%= typeof file !='undefined' ? file: '' %>" class="responsive-img">

    </div>



    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
      function resetMessage(){
        const errorDiv = document.querySelector(".error");
        errorDiv.innerHTML="";
      }
    </script>
</body>
</html>